@model List<Voucher>
@{
    ViewData["Title"] = "AdminHome";
}

<h1>Welcome to Admin Dashboard</h1>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Voucher Sales Report</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: beige; /* Set the background color for the entire page */
        }

        h1 {
            color: #007bff;
            text-align: center;
        }

        form {
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #dee2e6;
        }

        thead {
            background-color: #343a40;
            color: #fff;
        }

        tbody tr:hover {
            background-color: #f5f5f5;
        }

        button {
            background-color: #28a745;
            color: #fff;
            border: none;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin-top: 20px;
            cursor: pointer;
            border-radius: 5px;
        }

            button:hover {
                background-color: #218838;
            }
    </style>
</head>
<body>
    <form method="post" asp-action="AddNewVoucher" asp-controller="Admin">
        <div>
            <button type="submit" >Add New Voucher</button>
        </div>
    </form>
    <form method="post" asp-action="SalesInfo" asp-controller="Admin">
        <div>
            <button type="submit">Sales Information</button>
        </div>
    </form>
    <br />
    <div style="display: flex; flex-wrap: wrap; justify-content: space-around;">

        @foreach (var singlevoucher in Model)
        {
            <div style="border: 7px solid #ddd; padding: 10px; margin: 10px; text-align: center; width: 200px;">
                <img src="@singlevoucher.VoucherLink" width="150px" height="150px" />
                <h4>@singlevoucher.VoucherName</h4>
                <p>Type: @singlevoucher.VoucherValue</p>
                <p>Price: @singlevoucher.VoucherPrice RM</p>
                <form method="post"><button asp-action="deleteVoucher" asp-controller="Admin" asp-route-VoucherID="@singlevoucher.VoucherID">Delete</button></form>
            </div>
        }

    </div>
</body>

