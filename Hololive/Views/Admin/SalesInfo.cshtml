@model List<HistoryView>

@{
    ViewData["Title"] = "SalesInfo";
    int? saleCount = ViewData["SalesCount"] as int?;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Voucher Sales Report</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: beige; /* Set the background color for the entire page */
        }

        h1 {
            color: #007bff;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #dee2e6;
        }

        thead {
            background-color: #343a40;
            color: #fff;
        }

        tbody tr:hover {
            background-color: #f5f5f5;
        }

        button {
            background-color: #28a745;
            color: #fff;
            border: none;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin-top: 20px;
            cursor: pointer;
            border-radius: 5px;
        }

            button:hover {
                background-color: #218838;
            }
    </style>
</head>
<body>

    <h1>Total Voucher Sold: <span id="saleCount">@saleCount</span></h1>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Transaction ID</th>
                <th>Customer ID</th>
                <th>Customer Name</th>
                <th>Voucher ID</th>
                <th>Voucher Name</th>
                <th>Voucher Value</th>
                <th>Voucher Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model)
            {
                <tr>
                    <td>@transaction.TransactionID</td>
                    <td>@transaction.CustomerID</td>
                    <td>@transaction.CustomerName</td>
                    <td>@transaction.VoucherID</td>
                    <td>@transaction.VoucherName</td>
                    <td>@transaction.VoucherValue</td>
                    <td>@transaction.VoucherPrice</td>
                </tr>
            }
        </tbody>
    </table>

    <form method="post" asp-action="Index" asp-controller="Admin">
       <div>
            <button type="submit">Back to Home</button>
        </div>
    </form>

</body>
</html>
