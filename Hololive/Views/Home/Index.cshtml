@model Customer

@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: beige; /* Set the background color for the entire page */
        }

        .text-container {
            text-align: center;
            padding: 2rem;
        }

            .text-container h1 {
                color: white;
            }

            .text-container p {
                color: #d3d3d3;
            }
    </style>
</head>

<body>
    <div class="text-container">
        <h1 class="display-4">Welcome</h1>
        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    </div>

    <form method="post" asp-action="Login" asp-controller="Home">
        <div class="form-floating mb-3">
            <input type="text" id="email" name="email" required class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <label asp-for="CustomerEmail" class="form-label">Email</label>
            <span asp-validation-for="CustomerEmail" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input type="password" id="password" name="password" required class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
            <label asp-for="CustomerPassword" class="form-label">Password</label>
            <span asp-validation-for="CustomerPassword" class="text-danger"></span>
        </div>
        <div>
            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
        </div>
    </form>
    

</body>
</html>
