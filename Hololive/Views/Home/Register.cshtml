@model Customer
@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Form</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: beige; /* Set the background color for the entire page */
        }

        .container {
            text-align: center;
            position: absolute;
            top: 65%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .form-container {
            background-color: white;
            box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            padding: 20px;
            width: 400px;
            display: inline-block;
            text-align: left;
        }

        form {
            margin-bottom: 30px;
        }

        h1 {
            color: #007bff;
        }

        label {
            display: block;
            margin-top: 10px;
            margin-bottom: 5px;
        }

        input {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
            margin-bottom: 10px;
        }

            input[type="file"] {
                margin-top: 5px;
                margin-bottom: 15px;
            }

        button {
            background-color: #28a745;
            color: #fff;
            border: none;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin-top: 20px;
            cursor: pointer;
            border-radius: 5px;
        }

            button:hover {
                background-color: #0056b3;
            }
    </style>
</head>

<body>
    <div class="container">
        <div class="form-container">
            <h1>Registration Form</h1>
            <hr />
            <form method="post" asp-action="AddCustomer" asp-controller="Home">
                <label asp-for="CustomerName">Name</label>
                <input asp-for="CustomerName" />

                <label asp-for="CustomerEmail">Email</label>
                <input asp-for="CustomerEmail" />

                <label asp-for="CustomerPassword">Password</label>
                <input asp-for="CustomerPassword" type="password" />

                <label asp-for="CustomerPhone">Phone Number</label>
                <input asp-for="CustomerPhone" />

                <button>Register</button>
            </form>


        </div>
        <form method="post" asp-action="Index" asp-controller="Home">
            <div>
                <button type="submit">Back to Home</button>
            </div>
        </form>
    </div>
</body>

</html>